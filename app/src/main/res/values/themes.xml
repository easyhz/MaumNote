<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MaumNote" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">
            @color/main_background
        </item>
        <item name="android:navigationBarColor">
            @color/main_background
        </item>
        <item name="android:windowSplashScreenBackground" tools:ignore="S">@color/main_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="S">@color/main_background</item>
    </style>

    <style name="Theme.MaumNote.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_background</item>
        <item name="windowSplashScreenAnimatedIcon">@color/main_background</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.MaumNote</item>
    </style>
</resources>